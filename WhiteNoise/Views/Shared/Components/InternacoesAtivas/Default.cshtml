@model WhiteNoise.Models.Shared.ContadorViewModel

<div class="col-xl-3 col-md-12 mb-4">
    <div class="card border-start border-5 border-info shadow-sm h-100">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <h6 class="text-uppercase text-muted mb-2">Internações Ativas</h6>
                    <h2 class="mb-0 fw-bold">@Model.Contador</h2>
                </div>
                <div class="bg-white bg-opacity-10 p-3 rounded border border-info">
                    <i class="bi bi-people-fill fs-2 text-info"></i>
                </div>
            </div>
            <div class="mt-3">
                <a asp-controller="Internacao" asp-action="Index" class="btn btn-sm btn-outline-info">
                    Ver agenda <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>