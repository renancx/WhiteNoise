@model WhiteNoise.Models.Profissional.ProfissionalViewModel

<div>
    <h2>Excluir Paciente</h2>
    
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Tem certeza desta ação?</h4>
        <p>Esta ação é irreversível e removerá permanentemente o registro selecionado.</p>
    </div>

    <div>
        <h4>@Model.Nome</h4>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Data Nascimento</dt>
                <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-2">Estado Clínico</dt>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>