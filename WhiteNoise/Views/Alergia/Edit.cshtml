@using WhiteNoise.Domain.Enums
@using WhiteNoise.Models.Alergia
@model AlergiaViewModel

@{
    ViewData["Title"] = "Editar Alergia";
}

<div>
    <h3>Editar Estado Clínico</h3>

    <form asp-action="Edit" asp-controller="Alergia" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="_method" value="PUT" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tipo" class="control-label"></label>
            <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoAlergiaEnum>()"></select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div>
            <input type="submit" value="Confirmar" class="btn btn-success" />
            <a class="btn btn-secondary" asp-controller="Alergia" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>
