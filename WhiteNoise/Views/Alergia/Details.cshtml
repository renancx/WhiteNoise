@model WhiteNoise.Models.Alergia.AlergiaViewModel

<div>
    <h2>Detalhes do Alergia</h2>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Tipo de Alergia</dt>
            <dd class="col-sm-10">@Model.Tipo</dd>
