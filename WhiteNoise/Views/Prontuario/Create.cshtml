@using WhiteNoise.Domain.Entities
@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Prontuario.ProntuarioFormModel

@{
    ViewData["Title"] = "Cadastrar Prontuario";
}

<div class="container my-5">
    <h2>Novo Prontuario</h2>
    <form asp-action="Create" method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row col-12">
            <div class="form-group col-6">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
                        
            <div class="row form-group col-12">
                <list-selector for="PacienteId" items="Model.Pacientes" quick-create="Paciente"/>
            </div>
        </div>

        <div class="row col-12">
            <div class="form-group col-2">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" type="date" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>