@model WhiteNoise.Models.Prontuario.ProntuarioGridModel

<div>
    <h2>Excluir Prontuario</h2>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Tem certeza desta ação?</h4>
        <p>Esta ação é irreversível e removerá permanentemente o registro selecionado.</p>
    </div>

    <div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Data Criação</dt>
                <dd class="col-sm-10">@Model.DataCriacao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-2">Observacao</dt>
                <dd class="col-sm-10">@Model.Observacao</dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>