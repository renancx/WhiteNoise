@model WhiteNoise.Models.Prontuario.ProntuarioGridModel

<div>
    <h2>Excluir Prontuario</h2>
    <h3>Tem certeza que deseja excluir este prontuario?</h3>
    <div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Data Criação</dt>
                <dd class="col-sm-10">@Model.DataCriacao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-2">Observacao</dt>
                <dd class="col-sm-10">@Model.Observacao</dd>

                <dt class="col-sm-2">Paciente</dt>
                <dd class="col-sm-10">@Model.Paciente</dd>

            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>