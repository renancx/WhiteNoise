@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Internacao.InternacaoFinalizarModel

@{
    ViewData["Title"] = "Finalizar Internação";
}
<div class="container">
    <h2>Finalizar Internação</h2>

    <form asp-action="Finalizar" asp-controller="Internacao" asp-route-id="@Model.Id" method="post" autocomplete="off">
        <input type="hidden" name="_method" value="PUT" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados de Saída</legend>

            <div class="form-row mb-3">
                <div class="form-group col-md-6">
                    <div class="col-sm-4 font-weight-bold p-0">Paciente:</div>
                    <div class="col-sm-8 p-0">@Model.Paciente</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DataAlta" class="font-weight-bold"></label>
                    <input asp-for="DataAlta" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DataAlta" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="TipoSaida" class="font-weight-bold"></label>
                    <select asp-for="TipoSaida" class="form-control" asp-items="Html.GetEnumSelectList<TipoSaidaEnum>()"></select>
                    <span asp-validation-for="TipoSaida" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="form-group col-md-12">
                    <label asp-for="Motivo" class="font-weight-bold"></label>
                    <input asp-for="Motivo" class="form-control" />
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-primary w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Confirmar
            </button>
            <a asp-controller="Internacao" asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>
