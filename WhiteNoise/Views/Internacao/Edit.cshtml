@model WhiteNoise.Models.Internacao.InternacaoFormModel

@{
    ViewData["Title"] = "Editar Internação";
}
<div class="container">
    <h2>Editar Internação</h2>

    <form asp-action="Edit" asp-controller="Internacao" asp-route-id="@Model.Id" method="post" autocomplete="off">
        <input type="hidden" name="_method" value="PUT" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados da Internação</legend>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DataEntrada" class="font-weight-bold"></label>
                    <input asp-for="DataEntrada" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LeitoId" class="font-weight-bold"></label>
                    <select asp-for="LeitoId" class="form-control" asp-items="Model.Leitos"></select>
                    <span asp-validation-for="LeitoId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="form-group col-md-12">
                    <label asp-for="Motivo" class="font-weight-bold"></label>
                    <input asp-for="Motivo" class="form-control" />
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-info w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Confirmar
            </button>
            <a asp-controller="Internacao" asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>
