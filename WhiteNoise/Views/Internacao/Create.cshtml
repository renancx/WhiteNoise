@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Internacao.InternacaoFormModel

@{
    ViewData["Title"] = "Cadastrar Internação";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" autocomplete="off">
        <div asp-validation-summary="All" class="text-danger"></div>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados da Internação</legend>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="DataEntrada" class="control-label"></label>
                    <input asp-for="DataEntrada"
                           class="form-control"
                           type="date" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row col-md-12 p-0"> 
                <list-selector for="PacienteId" items="Model.Pacientes" quick-create="Paciente" />

                <list-selector for="LeitoId" items="Model.Leitos" quick-create="Leito" />
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Motivo" class="control-label"></label>
                    <textarea asp-for="Motivo" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados do Prontuário</legend>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="QueixaPrincipal" class="control-label"></label>
                    <textarea asp-for="QueixaPrincipal"
                              class="form-control"
                              rows="3"></textarea>
                    <span asp-validation-for="QueixaPrincipal" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="DataCriacao" class="control-label"></label>
                    <input asp-for="DataCriacao"
                           class="form-control"
                           type="datetime-local"
                           value="@Model.DataCriacao" />
                    <span asp-validation-for="DataCriacao" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Observacao" class="control-label"></label>
                    <textarea asp-for="Observacao"
                              class="form-control"
                              rows="4"></textarea>
                    <span asp-validation-for="Observacao" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-primary w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
