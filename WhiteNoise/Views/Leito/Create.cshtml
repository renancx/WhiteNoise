@using WhiteNoise.Domain.Entities
@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Leito.LeitoFormModel

@{
    ViewData["Title"] = "Cadastrar Leito";
}

<div class="container my-5">
    <h2>Novo Leito</h2>
    <form asp-action="Create" method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row col-12">
            <div class="form-group col-6">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group col-2">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoLeitoEnum>()"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="row form-group col-12">
                <list-selector for="DepartamentoId" items="Model.Departamentos" quick-create="Departamento" />
            </div>                   
        </div>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-info w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </form>
</div>