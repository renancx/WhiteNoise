@using WhiteNoise.Domain.Extensions
@model WhiteNoise.Models.Leito.LeitoGridModel

<div>
    <h2>Excluir Leito</h2>
    
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Tem certeza desta ação?</h4>
        <p>Esta ação é irreversível e removerá permanentemente o registro selecionado.</p>
    </div>

    <div>
        <h4>@Model.Descricao</h4>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Tipo</dt>
                <dd class="col-sm-10">@Model.Tipo.GetDisplayName()</dd>

                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">@Model.Status.GetDisplayName()</dd>

                <dt class="col-sm-2">Departamento</dt>
                <dd class="col-sm-10">@Model.Departamento</dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>