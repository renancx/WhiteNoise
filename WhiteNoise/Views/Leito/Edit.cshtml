@using WhiteNoise.Domain.Entities
@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Leito.LeitoFormModel

@{
    ViewData["Title"] = "Editar Leito";
}
<div class="container">
    <h2>Editar Leito</h2>
    <form asp-action="Edit" method="post" autocomplete="off">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados do Leito</legend>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Descricao" class="font-weight-bold"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <list-selector for="DepartamentoId" items="Model.Departamentos" quick-create="Departamento" />
                    <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Tipo" class="font-weight-bold"></label>
                    <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoLeitoEnum>()"></select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Status" class="font-weight-bold"></label>
                    <select class="form-control" disabled>
                        <option selected>@Model.Status</option>
                    </select>
                    <input type="hidden" asp-for="Status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-primary w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </form>
</div>
