@using WhiteNoise.Domain.Entities
@using WhiteNoise.Domain.Enums
@model WhiteNoise.Models.Paciente.PacienteFormModel

@{
    ViewData["Title"] = "Cadastrar Paciente";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Dados Pessoais</legend>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" type="date" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Sexo" class="control-label"></label>
                    <select asp-for="Sexo"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<SexoEnum>()">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="TipoPaciente" class="control-label"></label>
                    <select asp-for="TipoPaciente"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<TipoPacienteEnum>()">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="TipoPaciente" class="text-danger"></span>
                </div>

                
            </div>
        </fieldset>

        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Informações Clínicas</legend>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <list-selector for="EstadoClinicoId" items="Model.EstadosClinicos" class="form-control" />
                    <span asp-validation-for="EstadoClinicoId" class="text-danger"></span>
                </div>
            

                <div class="form-group col-md-3">
                    <label asp-for="TipoSanguineo" class="control-label"></label>
                    <select asp-for="TipoSanguineo"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<TipoSanguineoEnum>()">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <div class="d-flex justify-content-end w-25">
            <button type="submit" class="btn btn-primary w-50 me-2">
                <i class="bi bi-check-circle me-1"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}