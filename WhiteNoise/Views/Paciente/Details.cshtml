@using WhiteNoise.Domain.Extensions
@model WhiteNoise.Models.Paciente.PacienteGridModel

@{
    ViewData["Title"] = "Detalhes do Paciente";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <fieldset class="border p-3 mb-4">
        <legend class="w-auto">Dados Pessoais</legend>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="font-weight-bold">Nome</label>
                <p class="form-control-plaintext">@Model.Nome</p>
            </div>

            <div class="form-group col-md-3">
                <label class="font-weight-bold">CPF</label>
                <p class="form-control-plaintext">@Model.Cpf</p>
            </div>

            <div class="form-group col-md-3">
                <label class="font-weight-bold">Data de Nascimento</label>
                <p class="form-control-plaintext">@Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="font-weight-bold">E-mail</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>

            <div class="form-group col-md-3">
                <label class="font-weight-bold">Sexo</label>
                <p class="form-control-plaintext">@Model.Sexo</p>
            </div>

            <div class="form-group col-md-3">
                <label class="font-weight-bold">Tipo de Paciente</label>
                <p class="form-control-plaintext">@Model.TipoPaciente</p>
            </div>
        </div>
    </fieldset>

    <fieldset class="border p-3 mb-4">
        <legend class="w-auto">Informações Clínicas</legend>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label class="font-weight-bold">Estado Clínico</label>
                <p class="form-control-plaintext">@Model.EstadoClinico</p>
            </div>

            <div class="form-group col-md-4">
                <label class="font-weight-bold">Tipo Sanguíneo</label>
                <p class="form-control-plaintext">@Model.TipoSanguineo.GetDisplayName()</p>
            </div>

            <div class="form-group col-md-4 mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" disabled @if (Model.Ativo) { <text>checked</text> } />
                    <label class="form-check-label font-weight-bold">Ativo</label>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="d-flex justify-content-end w-25">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-50 me-2">
            <i class="bi bi-pencil me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary ml-2 w-50">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

</div>
