@model WhiteNoise.Models.Paciente.PacienteGridModel

<div>
    <h2>Detalhes do Paciente</h2>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>
            <dt class="col-sm-2">Estado Clínico</dt>
            <dd class="col-sm-10">@Model.EstadoClinico</dd>
            <dt class="col-sm-2">Data Nascimento</dt>
            <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-2">E-mail</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">CPF</dt>
            <dd class="col-sm-10">@Model.Cpf</dd>
            <dt class="col-sm-2">Sexo</dt>
            <dd class="col-sm-10">@Model.Sexo</dd>
            <dt class="col-sm-2">Tipo Paciente</dt>
            <dd class="col-sm-10">@Model.TipoPaciente</dd>
            <dt class="col-sm-2">Ativo</dt>
            <dd class="col-sm-10">@(Model.Ativo ? "Sim" : "Não")</dd>
            <dt class="col-sm-2">Motivo</dt>
            <dd class="col-sm-10">@Model.Motivo</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>