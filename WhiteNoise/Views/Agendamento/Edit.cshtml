@using WhiteNoise.Domain.Enums
@using WhiteNoise.Models.Agendamento
@model AgendamentoFormModel

@{
    ViewData["Title"] = "Editar Agendamento";
}

<div>
    <h3>Editar Estado Clínico</h3>

    <form asp-action="Edit" asp-controller="Agendamento" asp-route-id="@Model.Id" method="post" autocomplete="off">
        <input type="hidden" name="_method" value="PUT" />

        <div class="form-group">
            <label asp-for="DataHora" class="control-label"></label>
            <input asp-for="DataHora" class="form-control" />
            <span asp-validation-for="DataHora" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tipo" class="control-label"></label>
            <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoAgendamentoEnum>()"></select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusAgendamentoEnum>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Observacoes" class="control-label"></label>
            <input asp-for="Observacoes" class="form-control" />
            <span asp-validation-for="Observacoes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PacienteId"></label>
            <select asp-for="PacienteId" class="form-control" asp-items="Model.Pacientes">
            </select>
            <span asp-validation-for="PacienteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfissionalId"></label>
            <select asp-for="ProfissionalId" class="form-control" asp-items="Model.Profissionais">
            </select>
            <span asp-validation-for="ProfissionalId" class="text-danger"></span>
        </div>


        <div>
            <input type="submit" value="Confirmar" class="btn btn-success" />
            <a class="btn btn-secondary" asp-controller="Agendamento" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>
