@using WhiteNoise.Models.Agendamento
@model AgendamentoGridModel

@{
    ViewData["Title"] = "Deletar Agendamento";
}

<div>
    <h3>Deletar Agendamento</h3>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Tem certeza desta ação?</h4>
        <p>Esta ação é irreversível e removerá permanentemente o registro selecionado.</p>
    </div>

    <div>
        <label asp-for="DataHora"></label>
        <input asp-for="DataHora" disabled class="form-control" />
    </div>

    <div>
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" disabled class="form-control" />
    </div>

    <div>
        <label asp-for="Status"></label>
        <input asp-for="Status" disabled class="form-control" />
    </div>

    <div>
        <label asp-for="Observacoes"></label>
        <input asp-for="Observacoes" disabled class="form-control" />
    </div>

    <div>
        <label asp-for="Paciente"></label>
        <input asp-for="Paciente" disabled class="form-control" />
    </div>

    <div>
        <label asp-for="Profissional"></label>
        <input asp-for="Profissional" disabled class="form-control" />
    </div>

    <form asp-controller="Agendamento" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Agendamento" asp-action="Calendario">Cancelar</a>
        </div>
    </form>
</div>
