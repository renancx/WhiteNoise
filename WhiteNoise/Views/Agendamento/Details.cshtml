@model WhiteNoise.Models.Agendamento.AgendamentoGridModel

@{
    ViewData["Title"] = "Detalhes do Agendamento";
}
<div class="container">
    <h2>Detalhes do Agendamento</h2>

    <fieldset class="border p-3 mb-4">
        <legend class="w-auto">Dados do Agendamento</legend>

        <div class="form-row mb-2">
            <div class="col-md-4">
                <strong>Data e Hora:</strong>
                <div>@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
            <div class="col-md-4">
                <strong>Tipo:</strong>
                <div>@Model.Tipo</div>
            </div>
            <div class="col-md-4">
                <strong>Status:</strong>
                <div>@Model.Status</div>
            </div>
        </div>

        <div class="form-row mb-2">
            <div class="col-md-6">
                <strong>Paciente:</strong>
                <div>@Model.Paciente</div>
            </div>
            <div class="col-md-6">
                <strong>Profissional:</strong>
                <div>@Model.Profissional</div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Observacoes))
        {
            <div class="form-row">
                <div class="col-md-12">
                    <strong>Observações:</strong>
                    <div>@Model.Observacoes</div>
                </div>
            </div>
        }
    </fieldset>

    <div class="d-flex w-50">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info w-25 me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ml-2 w-25 me-2">
            <i class="bi bi-trash me-1"></i> Excluir
        </a>
        <a asp-action="Calendario" class="btn btn-outline-secondary ml-2 w-25">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>
</div>
